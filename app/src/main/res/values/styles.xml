<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FontStyle">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/appColor</item>
        <item name="android:textSize">@dimen/app_name_size</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="exercise_no_icon">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>