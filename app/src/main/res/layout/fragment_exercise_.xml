    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context=".Exercise_Fragment">


    <Button
        android:id="@+id/chest_button"
        style="@style/Button"
        android:text="@string/chest_button"
        />

    <Button
        android:id="@+id/back_button"
        style="@style/Button"
        android:text="@string/back_button" />

    <Button
        android:id="@+id/Arms"
        style="@style/Button"
        android:text="@string/arms_button" />

    <Button
        android:id="@+id/legs_button"
        style="@style/Button"
        android:text="@string/legs_button" />

    <Button
        android:id="@+id/shoulder_button"
        style="@style/Button"
        android:text="@string/shoulder_button" />

    <Button
        android:id="@+id/abs_button"
        style="@style/Button"
        android:text="@string/abs_button" />
</LinearLayout>