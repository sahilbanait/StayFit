<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        app:title="@string/appName"
        android:id="@+id/title_linear_layout"
        tools:context=".MainActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_button"
            style="@style/FontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:contentDescription="@string/backgroundchanger"
            android:focusable="true"
            android:src="@drawable/circular"
            />

        <ImageView
            android:id="@+id/view_logo"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:contentDescription="@string/logo"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/barbell" />

        <TextView
            android:id="@+id/logo_textview"
            style="@style/FontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/appName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/text_email"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:autofillHints="Please enter your email"
            android:hint="@string/enter_your_email"
            android:inputType="textEmailAddress"
            android:shadowColor="#FF6600" />

        <Button
            android:id="@+id/proceed_button"
            style="@style/Button"
            android:layout_width="177dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/proceed_button" />

    </LinearLayout>
</layout>
